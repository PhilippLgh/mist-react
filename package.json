{
  "name": "mist-shell",
  "version": "1.0.3",
  "description": "The Dapp Browser",
  "main": "index.js",
  "homepage": "https://github.com/ethereum/mist-shell",
  "author": "Mist team <mist@ethereum.org>",
  "license": "ISC",
  "repository": "https://github.com/ethereum/mist-shell",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare-release": "node ./scripts/copyApp.js",
    "build": "yarn run prepare-release && build",
    "release": "env-cmd .env build"
  },
  "dependencies": {
    "@philipplgh/electron-app-manager": "^0.8.2",
    "axios": "^0.18.0"
  },
  "peerDependencies": {
    "adm-zip": "^0.4.13"
  },
  "devDependencies": {
    "electron": "^5.0.0-beta.1",
    "electron-builder": "20.31.3",
    "env-cmd": "^8.0.2"
  },
  "build": {
    "productName": "Mist",
    "appId": "org.ethereum.mist.next",
    "asar": false,
    "files": [
      "index.js",
      "electron-shell.js",
      "electron-zip-support.js",
      "preload.js",
      "WindowManager.js",
      "ui/download-splash.html",
      "*.asar",
      "*.zip"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "WebBrowser"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  }
}
